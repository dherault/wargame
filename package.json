{
  "name": "basic_wars",
  "version": "0.0.0",
  "private": true,
  "dependencies": {
    "flexpad": "^0.2.0",
    "lodash.throttle": "^4.1.1",
    "mousetrap": "^1.6.2",
    "normalize.css": "^8.0.1",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-redux": "^6.0.0",
    "react-scripts": "2.1.5",
    "redux": "^4.0.1",
    "redux-saga": "^1.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "sync-s3": "aws s3 sync build/ s3://basicwars.com --region eu-west-3",
    "invalidate-cloudfront": "aws cloudfront create-invalidation --distribution-id E3JR8XO6CA1OSL --paths '/*'",
    "deploy": "npm run sync-s3 && npm run invalidate-cloudfront",
    "build-deploy": "npm run build && npm run deploy"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
